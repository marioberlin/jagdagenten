{
  "id": "ibird",
  "name": "iBird",
  "version": "1.0.0",
  "description": "Email, Calendar & Appointments System",
  "longDescription": "A comprehensive productivity suite with email management (IMAP/SMTP), calendar with multi-source sync, and appointment scheduling. Features a three-module architecture with seamless switching between Mail, Calendar, and Appointments views.",
  "author": "LiquidCrypto",
  "license": "MIT",
  "category": "productivity",
  "keywords": ["email", "calendar", "appointments", "scheduling", "imap", "smtp"],
  "icon": "Bird",

  "entry": "./App.tsx",
  "store": "./store.ts",

  "window": {
    "mode": "fullscreen",
    "title": "iBird"
  },

  "integrations": {
    "dock": {
      "enabled": true,
      "position": 3
    },
    "menuBar": {
      "hookPath": "./hooks/useMenuBar.ts"
    },
    "shortcuts": {
      "hookPath": "./hooks/useShortcuts.ts"
    },
    "aiContext": {
      "systemPrompt": "You are helping the user manage their email, calendar, and appointments in iBird.",
      "knowledge": ["email-management", "calendar-scheduling"]
    },
    "commandPalette": {
      "commands": [
        { "id": "ibird-new-message", "label": "New Email Message", "shortcut": "Cmd+N", "category": "iBird" },
        { "id": "ibird-new-event", "label": "New Calendar Event", "category": "iBird" },
        { "id": "ibird-new-appointment", "label": "New Appointment Type", "category": "iBird" }
      ]
    }
  },

  "capabilities": [
    "network:http",
    "network:websocket",
    "storage:local",
    "ai:llm",
    "notification:toast",
    "notification:push"
  ]
}
