{
  "id": "builder",
  "name": "Builder",
  "version": "1.0.0",
  "description": "AI-powered app builder for LiquidOS",
  "author": "LiquidOS",
  "category": "developer",
  "keywords": ["builder", "scaffold", "ai", "create", "app"],
  "icon": "Hammer",
  "entry": "./App.tsx",
  "window": {
    "mode": "floating",
    "title": "Builder",
    "defaultSize": { "width": 1000, "height": 700 },
    "resizable": true
  },
  "integrations": {
    "dock": {
      "enabled": true,
      "position": 3
    },
    "commandPalette": {
      "commands": [
        { "id": "build-new-app", "label": "Build New App", "keywords": ["create", "scaffold", "generate"] },
        { "id": "build-status", "label": "View Build Status", "keywords": ["progress", "building"] }
      ]
    }
  },
  "capabilities": ["network:http", "a2a:connect", "ai:agent"]
}
