{
  "id": "aurora-travel",
  "name": "Aurora Travel",
  "version": "1.0.0",
  "description": "AI-powered travel planning with weather intelligence",
  "author": "LiquidCrypto",
  "license": "MIT",
  "category": "travel",
  "keywords": ["travel", "planning", "trips", "weather", "packing", "destinations"],
  "icon": "Globe",

  "entry": "./App.tsx",
  "store": "./store.ts",

  "window": {
    "mode": "floating",
    "title": "Aurora Travel",
    "defaultSize": { "width": 1000, "height": 700 },
    "resizable": true
  },

  "integrations": {
    "dock": {
      "enabled": true,
      "position": 8
    },
    "aiContext": {
      "systemPrompt": "You are a travel planning assistant helping users plan trips with weather-aware recommendations."
    }
  },

  "capabilities": [
    "network:http",
    "storage:local",
    "ai:llm",
    "notification:toast"
  ]
}
