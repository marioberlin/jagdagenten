# LiquidCrypto Environment Configuration
# Copy this to .env and fill in the values

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3001
NODE_ENV=development
BASE_URL=http://localhost:3001

# =============================================================================
# PostgreSQL Database (for A2A task persistence)
# =============================================================================
# Connection string format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://liquidcrypto:liquidcrypto_dev@localhost:5432/liquidcrypto

# Use PostgreSQL for A2A task storage (default: false uses in-memory)
USE_POSTGRES=true

# =============================================================================
# Redis (optional - for distributed WebSocket and caching)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# AI API Keys (Backend)
# =============================================================================
GEMINI_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# =============================================================================
# AI API Keys (Frontend - VITE_ prefix exposes to browser)
# =============================================================================
VITE_GEMINI_API_KEY=
VITE_ANTHROPIC_API_KEY=

# =============================================================================
# gRPC Transport (optional)
# =============================================================================
ENABLE_GRPC=false
GRPC_PORT=50051

# =============================================================================
# OpenTelemetry (optional)
# =============================================================================
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# =============================================================================
# Security
# =============================================================================
# Require WebSocket authentication
REQUIRE_WS_AUTH=false

# JWT secret for authentication
JWT_SECRET=change-this-in-production

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# Frontend API Configuration
# =============================================================================
# Base URL for backend API (used for OAuth and other frontend API calls)
VITE_API_BASE_URL=http://localhost:3000

# =============================================================================
# Google APIs
# =============================================================================
# Google Places API key (for Restaurant Finder agent)
# Get one at: https://console.cloud.google.com/apis/credentials
# Enable: Places API (New)
GOOGLE_PLACES_API_KEY=

# =============================================================================
# Google OAuth (for user authentication)
# =============================================================================
# Create OAuth 2.0 credentials at: https://console.cloud.google.com/apis/credentials
# Set authorized redirect URI to: http://localhost:3000/auth/google/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# Google Drive Integration (frontend)
# =============================================================================
VITE_GOOGLE_API_KEY=
VITE_GOOGLE_CLIENT_ID=

# =============================================================================
# Google Service Account (for Smart Sheets / TemplateService)
# =============================================================================
# Create a service account at: https://console.cloud.google.com/iam-admin/serviceaccounts
# Enable: Google Drive API, Google Sheets API
# Download JSON key and extract these values:
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_PRIVATE_KEY=

# Master template spreadsheet ID (the Smart Sheet will be cloned from this)
# Create a template sheet and share it with your service account email
GOOGLE_MASTER_TEMPLATE_ID=
